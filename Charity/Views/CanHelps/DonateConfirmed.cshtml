@model Charity.Models.CanHelp

@{
    ViewBag.Title = "DonateConfirmed";
}

<h2>Please confirm your data</h2>


<div class="form-horizontal">
     <div class="form-group">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.FirstName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CreditCard, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CreditCard)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CV, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CV)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Amount)
        </div>
    </div>

    @Html.ActionLink("Edit", "Edit", new { id = Model.CanHelpId }, new { @class = "btn btn-primary btn-lg glyphicon glyphicon-edit" })
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Donate", "Thank", "Home", new { area = "" }, new { @class = "btn btn-success btn-lg" })
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Cancel", "Index")
</div>
